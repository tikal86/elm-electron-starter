{
  "name": "Yourappname",
  "version": "0.0.1",
  "description": "Your description",
  "main": "main.js",
  "scripts": {
    "start-dev": "NODE_ENV=dev elm make src/renderer/Main.elm --output dist/bundle.js && electron .",
    "start": "NODE_ENV=dev concurrently --kill-others 'webpack-dev-server --hot' 'npm run build-main && electron .'",
    "startprod": "NODE_ENV=production npm run build && electron .",
    "build": "NODE_ENV=production npm run build-main && npm run build-renderer",
    "build-renderer": "webpack -p --env.production",
    "build-main": "npm run generate-ipc && tsc src/main/main.ts --outDir .",
    "generate-ipc": "elm-electron src/renderer/Ipc.elm --ts src/main/ipc.ts --elm src/renderer/IpcSerializer.elm",
    "test-watch": "elm-test --watch",
    "test": "elm-test",
    "dist-mac": "build --mac",
    "dist-win": "build --win",
    "dist-linux": "build --linux",
    "dist": "build --mac --win --linux",
    "release": "build --mac --win --linux"
  },
  "build": {
    "appId": "com.yourname.yourappname",
    "mac": {
      "category": "Utility"
    }
  },
  "repository": "https://github.com/yourgithubusernamename/yourgithubpackagename",
  "keywords": [
    "Electron",
    "yourkeyword"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^8.0.14",
    "@types/webpack": "^3.0.5",
    "concurrently": "^3.5.0",
    "devtron": "^1.4.0",
    "electron": "^1.7.5",
    "electron-builder": "^11.7.0",
    "electron-log": "^1.3.0",
    "elm-electron": "0.0.3",
    "elm-hot-loader": "^0.5.4",
    "elm-test": "^0.18.7",
    "elm-webpack-loader": "^7.0.0",
    "ts-loader": "^2.3.1",
    "typescript": "^2.4.1",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1"
  },
  "dependencies": {
    "electron-debug": "^1.1.0",
    "electron-is-dev": "^0.1.2",
    "electron-log": "^1.3.0",
    "electron-updater": "^1.6.0",
    "jquery": "^3.2.1"
  }
}
